<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="application_name" source="spring.application.name"/>
    <springProperty scope="context" name="active_profile" source="spring.profiles.active"/>

    <property name="PATTERN_SYSTEM" value="%d{HH:mm:ss.SSS} [${application_name}] [${active_profile}] [${HOSTNAME}] [%level] ${PID:- } [%thread] [%C{0}:%L] - %msg%n %ex{full}"/>

    <springProfile name="local, default">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${PATTERN_SYSTEM}</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>

        <appender name="jsonConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
        </appender>

        <logger name="br.com.gomesar" level="DEBUG"/>

        <root level="INFO">
            <appender-ref ref="jsonConsoleAppender"/>
        </root>
    </springProfile>

</configuration>